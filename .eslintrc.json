{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "airbnb-base",
  "rules": {
    "arrow-body-style": 0,
    "no-underscore-dangle": 0,
    "linebreak-style": 0,
    "max-len": 0,
    "no-param-reassign": ["error", {
      "props": false
    }],
    "comma-dangle": ["error", "always-multiline", {
      "functions": "never"
    }],
    "class-methods-use-this": 0
  }
}
